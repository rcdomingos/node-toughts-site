      <label for="email">Email:</label>
      <input
        type="email"
        name="email"
        placeholder="Digite seu email"
        required
      />
    </div>
    <div class="form-control">
      <label for="password">Senha:</label>
      <input
        type="password"
        name="password"
        placeholder="Digite sua senha"
        required
      />
    </div>
    <input type="submit" value="Entrar" class="btn" />
